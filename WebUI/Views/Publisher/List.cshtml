@model IEnumerable<Entity.Publisher>
@{
ViewData["Title"] = "Publisher List Page";
}


<div class="container my-4">
    <div class="row">
        <div class="col-md-3">
        <partial name="_PanelMenu" />
        </div>
        <div class="col-md-9">
           
                <div class="row">
                     
                    <div class="col">
                        <div class="text-right mb-3">
                            <a href="/publisher/create" class="btn btn-sm btn-primary">Create</a>
                        </div>
                        @if (Model.Count()>0)
                        {
                            <table class="table table-bordered table-striped">
                                <thead>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th></th>

                                </thead>
                                <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.PublisherId</td>                                       
                                        <td>@item.Name</td>
                                        <td>
                                            <a class="btn btn-success btn-sm" asp-route-id="@item.PublisherId" asp-action="Details" asp-controller="Publisher">
                                                    Detail</a>
                                            <a class="btn btn-primary btn-sm" asp-route-id="@item.PublisherId" asp-action="Edit" asp-controller="Publisher">
                                                    Edit</a>
                                            <a class="btn btn-danger btn-sm" asp-route-id="@item.PublisherId" asp-action="Delete" asp-controller="Publisher">Delete</a>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        }
                        else
                        {
                        <div class="alert alert-danger">
                            Not found Publisher.
                        </div>
                        }
                </div>
            
        </div>        
    </div>        
</div>

