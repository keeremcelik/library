@model IEnumerable<Author>
@{
ViewData["Title"] = "Book List Page";
}


<div class="container my-4">
    <div class="row">
        <div class="col-md-3">
        <partial name="_PanelMenu" />
        </div>
        <div class="col-md-9">
            
                <div class="row">
                    <div class="col">
                        <div class="text-right mb-3">
                            <a href="/author/create" class="btn btn-sm btn-primary">Create</a>
                        </div>
                        @if (Model.Count()>0)
                        {
                            <table class="table table-bordered table-striped">
                                <thead>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Surname</th>
                                    <th>Approved</th>
                                    <th></th>

                                </thead>
                                <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>                                       
                                        <td>@item.Name</td>
                                        <td>@item.Surname</td>
                                        <td>
                                              @if (@item.isApproved)
                                            {
                                                <span class="badge badge-success">Yes</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-danger">No</span>
                                            }
                                        </td>
                                        <td>
                                            <a class="btn btn-success btn-sm" asp-route-id="@item.Id" asp-action="Details" asp-controller="Author">
                                                    Detail</a>
                                            <a class="btn btn-primary btn-sm" asp-route-id="@item.Id" asp-action="Edit" asp-controller="Author">
                                                    Edit</a>
                                            <a class="btn btn-danger btn-sm" asp-route-id="@item.Id" asp-action="Delete" asp-controller="Author">Delete</a>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        }
                        else
                        {
                        <div class="alert alert-danger">
                            Kitap BulunamadÄ±.
                        </div>
                        }
                </div>
            
        </div>        
    </div>        
</div>

