@model Author
@{
ViewData["Title"] = "Edit Author ";
}
<div class="container">
    
<form asp-action="Edit" asp-controller="Author" method="POST" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id">
 <div class="form-group">
   <label asp-for="Name">Name</label>
    <input asp-for="Name" class="form-control" placeholder="Please enter author name.">
  </div>
  
  <div class="form-group">
    <label asp-for="Surname">Surname</label>
    <input asp-for="Surname" class="form-control" placeholder="Please enter Author Surname">
  </div>
 

  <div class=" form-group form-check">
  <label class="form-check-label" asp-for="isApproved">
    <input class="form-check-input" asp-for="isApproved">
    Görüntülensin mi ?
  </label>
</div>
<button type="submit" class="btn btn-primary">Save</button>
</form>
</div>