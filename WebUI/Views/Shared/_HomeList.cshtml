 
@model IEnumerable<Entity.Book>

<h6> <strong>@Model.Count() </strong> results found.</h6>   

@if (Model.Count() == 0)
{
	<div class="alert alert-warning">
		KayÄ±t Yok
	</div>
}
else
{    


	@foreach (var item in Model)
	{
    <div class="card mb-12 mb-3" style="max-height: 400px;" >
        <div class="row no-gutters">
            <div class="col-md-4">
                <a asp-controller="Book" asp-action="Details" asp-route-id="@item.BookId">
                    <img src="~/img/@item.Image" class="card-img" alt="@item.Name" style="height: 400px;">
                </a>

            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <div class="pl-2">                       
                        <div class="row">
                            <h4 class="card-title">@item.Name</h4>
                            <p class="card-text card-abstract">@item.Abstract</p>   
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>	
    }
}
