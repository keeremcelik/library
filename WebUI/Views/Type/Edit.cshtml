@model Entity.Type
@{
ViewData["Title"] = "Edit Type ";
}
<div class="container">
    
<form asp-action="Edit" asp-controller="Type" method="POST" >
    <input type="hidden" asp-for="TypeId">
 <div class="form-group">
   <label asp-for="Name">Name</label>
    <input asp-for="Name" class="form-control" placeholder="Please enter type name.">
  </div>
  
 
<button type="submit" class="btn btn-primary">Save</button>
</form>
</div>